{
  "name": "desktop-live2d",
  "version": "1.0.0",
  "description": "奇妙黄瓜桌宠",
  "main": "./out/main/index.js",
  "author": "github.com/wenxig",
  "type": "module",
  "scripts": {
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "bun run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps && electron-rebuild",
    "build:unpack": "bun run build && electron-builder --dir",
    "build:win": "bun run build && electron-builder --win",
    "build:mac": "bun run build && electron-builder --mac",
    "build:linux": "bun run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@vueuse/core": "^13.4.0",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "motion-v": "^1.3.0",
    "naive-ui": "^2.41.0",
    "node-window-manager": "^2.2.4",
    "pinia": "^3.0.1",
    "pixi-live2d-display-advanced": "^0.2.0",
    "pixi.js": "7.4.3",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/vite": "^4.1.10",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.0.0",
    "lightningcss": "^1.30.1",
    "tailwindcss": "4.1.10",
    "typescript": "^5.7.3",
    "unplugin-vue-components": "^28.4.1",
    "vite": "npm:rolldown-vite@latest",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "cwebp-bin",
      "electron",
      "esbuild",
      "extract-file-icon",
      "iohook",
      "node-window-manager",
      "uiohook-napi",
      "vue-demi"
    ],
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  }
}